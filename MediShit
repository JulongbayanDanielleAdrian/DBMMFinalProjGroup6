from kivy.app import App
from kivy.uix.gridlayout import GridLayout
from kivy.uix.label import Label
from kivy.uix.image import Image
from kivy.uix.button import Button
from kivy.uix.textinput import TextInput
from kivy.uix.widget import Widget
from kivy.lang import Builder
Builder.load_file("test.kv")

class MediShit(App):
    def build(self):
        self.window = GridLayout()
        #add widgets to window
        self.window.cols = 1
        #columns bro

        #le ano to ulit? basta proposition ng mga element mula sa gitna o labas
        self.window.size_hint = (0.4, 0.6)
        self.window.pos_hint = {"center_x": 0.5, "center_y": 0.5}

        #show dem dat
        self.window.add_widget(Image(source = "MediShit.png"))

        #greet em oldies
        self.greeting = (Label
            (
            text = "Your Account is Sh*t?",
            font_size = "25",
            color = "#00a8f3"
            ))
        self.window.add_widget(self.greeting)

        #le inputs
        self.user = (TextInput
            (
            hint_text="Username",
            hint_text_color=(0.5, 0.5, 0.5, 0.5),
            multiline = False,
            padding_y = (10, 10),
            size_hint = (0, 0.5)
            ))
        self.window.add_widget(self.user)

        self.user = (TextInput
            (
            hint_text="Password",
            hint_text_color=(0.5, 0.5, 0.5, 0.5),
            multiline=False,
            padding_y = (10, 10),
            size_hint=(0, 0.5)
        ))
        self.window.add_widget(self.user)

        #spacing
        self.space = (Widget
            (
            size_hint_y=None,
            height = 20
            ))
        self.window.add_widget(self.space)

        #le button
        self.button = (Button
            (
            text = "Register",
            size_hint = (1, 0.5),
            bold = True,
            background_color = "#00a8f3"
            ))
        self.button.bind(on_press = self.callback)
        self.window.add_widget(self.button)

        return self.window

    def callback(self, instance):
        self.greeting.text = "Ayo " + self.user.text + ", my nigga..."

if __name__ == "__main__":
    MediShit().run()
